apiVersion: v1
kind: Service
metadata:
  namespace: {{ namespace_newrelic }}
  name: nri-kube-state-metrics
  labels:
    app.kubernetes.io/name: kube-state-metrics
  annotations:
    prometheus.io/scrape: '{{ nri_prom_scrape_kube_state }}'
spec:
  type: "ClusterIP"
  ports:
  - name: "http"
    protocol: TCP
    port: 8080
    targetPort: 8080
  selector:
    app.kubernetes.io/name: kube-state-metrics